<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="contenedorPrincipal" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.udea.tecnicas.ejemploborderpane.controller.ContenedorPrincipalController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Archivo">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#mnuCerrar_action" text="Cerrar" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editar">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#mnuAgregarUsuario_action" text="Agregar usuario" />
                        <MenuItem mnemonicParsing="false" onAction="#mnuAgregarDireccion_action" text="Agregar dirección" />

                        <MenuItem mnemonicParsing="false" onAction="#mnuEliminarRegistro_action" text="Eliminar usuario" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Imágenes">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#mnuVisualizarImagenes_action" text="Visualizar" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ayuda">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <Label text="Desarrollado en Técnicas de Programación" BorderPane.alignment="CENTER" />
    </bottom>

</BorderPane>
